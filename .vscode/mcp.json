{
    // ðŸ’¡ Inputs are prompted on first server start, then stored securely by VS Code.
    "inputs": [
        {
            "type": "promptString",
            "id": "github-token",
            "description": "Github personal access token",
            "password": true
        },
        {
            "type": "promptString",
            "id": "mongodb-password",
            "description": "MongoDB password",
            "password": true
        }
    ],
    "servers": {
        "github": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github-token}",
            }
        },
        "postgres": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-postgres",
                "postgresql://root:xxxxxx@localhost/blogs"
            ]
        },
        "Context7": {
            "type": "http",
            "url": "https://mcp.context7.com/mcp"
        },
        "MongoDB": {
            "command": "npx",
            "args": [
                "-y",
                "mongodb-mcp-server",
                "--connectionString",
                "mongodb://root:${input:mongodb-password}@localhost:27017",
                "--readOnly"
            ]
        }
    }
}