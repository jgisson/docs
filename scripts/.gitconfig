[core]
	editor = vim
	autocrlf = input
	hooksPath = ~/gitconfig/hooks
[user]
	name = jgisson
	email = jerome.gisson@gmail.com
[pull]
	rebase = true
[fetch]
	prune = true
[init]
    defaultBranch = main
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	pfl = push --force-with-lease
	co = checkout
